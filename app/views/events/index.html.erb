<h1>Log de Eventos</h1>

<table class="table table-striped">
  <tr>
  <thead>
    <th>Tipo</th>
    <th>Timestamp</th>
    <th>Cantidad</th>
    <th>Unidad</th>
    <th>Rut</th>
    <th>OrderID</th>
    <th>Sku</th>
  </thead>

  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.type %></td>
    <td><%= event.created_at %></td>
    <td><%= event.qty %></td>
    <td><%= event.unit %></td>
    <td><%= event.rut %></td>
    <td><%= link_to event.orderId , order_path(event.orderId)%></td>
    <td><%= event.sku %></td>
  </tr>
<% end %>
</table>

